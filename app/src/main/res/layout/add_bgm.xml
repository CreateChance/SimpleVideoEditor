<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vw_add_bgm_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_take_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take video" />

        <Button
            android:id="@+id/btn_choose_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose video" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Current Video File: /sdcard/sample.mp4" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_video_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Start: " />

        <EditText
            android:id="@+id/et_video_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Input video start time here"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Duration: " />

        <EditText
            android:id="@+id/et_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Input video duration time here"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_choose_bgm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose bgm file" />

    <TextView
        android:id="@+id/tv_bgm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Current Bgm File: /sdcard/sample.mp3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bgm_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bgm Start: " />

        <EditText
            android:id="@+id/et_bgm_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Input bgm start time here"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do it!" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress: N/A" />

</LinearLayout>