<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlt_works_thumbnail"
            android:layout_width="54dp"
            android:layout_height="96dp"
            android:layout_marginStart="15dp">

            <ImageView
                android:id="@+id/iv_works_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@color/colorAccent" />

            <ImageView
                android:id="@+id/iv_works_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/video_play" />

            <TextView
                android:id="@+id/tv_works_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:textSize="13sp"
                tools:text="10:05" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/rlt_works_thumbnail"
            android:gravity="center|start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_works_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="This is the title." />

            <TextView
                android:id="@+id/tv_works_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                tools:text="2018-07-10 15:00:00" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>